#include <iostream>
#include <random>

using namespace std;

int gen();
void preencheArray(int[], int);
void ordenacao(int[], int);
void arrayOrdenado(int[], int);

int main()
{
    int size = 10;
    int num[size];
    
    
    cout << "Array original: \n";
    preencheArray(num, size);
    arrayOrdenado(num, size);
    
    
    cout << "\n\nArray ordenado: \n";
    ordenacao(num, size);
    arrayOrdenado(num, size);

    return 0;
}


int gen()
{
    random_device rd;
    mt19937 gen_numb(rd());
    uniform_int_distribution<> dis(1,100);
    
    return dis(gen_numb);
}


void preencheArray(int num[], int size){
    for(int aux = 0; aux < size; aux++){
        num[aux] = gen();
    }
}


void ordenacao(int num[], int size){
    int aux;
     for(int prev = 0; prev <= size-2; prev++){
        for(int next = prev+1; next <= size-1; next++){
            aux = num[prev];
            
            if(num[prev] > num[next]){
                num[prev] = num[next];
                num[next] = aux;
            }
        }
    }
}


void arrayOrdenado(int num[], int size){
    for(int aux = 0; aux < size; aux++){
        cout << num[aux] << " ";
    }
}
